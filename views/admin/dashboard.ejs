<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
       background-color:white; 
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      background-image: url(/img/a.jpg);
      background-repeat: no-repeat;
      background-size: cover;
      color:rgba(0, 0, 0, 0.829);
      padding: 20px;
      margin: 0;
    }

    h1 i{
      text-align: center;
      color:rgba(255, 255, 255, 0.849) ;
      padding: 20px;
      margin: 0;
    }
    h2 {
      font-size: 24px;
      margin-top: 20px;
      text-align: center; 
    }

    h3{
      margin-left: 100px;
    }
    table {
      width: 75%;
      margin-top: 20px;
      margin-left: 100px;
      border: 2px solid rgb(7, 25, 36);
    }

    th, td {
      padding: 12px 15px;
      text-align: left;  
      border: 1px solid rgb(7, 27, 39);     
    }

    th {
      background-color:black;
      color:whitesmoke;
      width: 800px;
    }

    tr{
      background-color: rgba(128, 128, 128, 0.205);
    }

    tr:hover {
      background-color:rgba(0, 128, 0, 0.466);
    }

    td a {
      display: inline-block;
      text-decoration: none;
      padding: 5px 10px;
      background-color:white;
      color: black;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    td a:hover {
      background-color: green;
    }

    #logout{
      display: inline-block;
      text-decoration: none;
      padding: 10px 20px;
      background-color: white;
      color: red;
      border: 1px solid red;
      border-radius: 5px;
      transition: background-color 0.3s;
      margin-top: 20px;
      margin-left: 800px;
    }
    #createuser{
      display: inline-block;
      text-decoration: none;
      padding: 10px 20px;
      background-color: white; 
      color: green;
      border: 1px solid green;
      border-radius: 5px;
      transition: background-color 0.3s;
      margin-top: 20px;
      margin-left: 100px;
    }

    #createuser:hover {
      background-color: green; 
      color: white;
      border: 1px solid rgba(245, 245, 245, 0.568);
    }
    #logout:hover {
      background-color: red; 
      color: white;
      border: 1px solid rgba(245, 245, 245, 0.568);
    }
    .search-container {
      text-align: center;
      margin-top: 20px;
    }

    .search-input {
      padding: 10px;
      border: 2px solid black;
      border-radius: 5px;
      width: 300px;
      margin-right: 10px;
    }

    .search-button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    
    .search-button:hover {
      background-color: #0056b3;
    }
    
  </style>
</head>
<body>
  <h1><i>Admin</i>Dashboard</h1>
  
  <a href="/admin/createuser" id="createuser" class="create-button">createuser</a>
  <a href="/admin/signout" id="logout" class="create-button">Logout</a>
 

  <h2>User List</h2>

  <div class="search-container">
    <form action="/admin/dashboard" method="GET">
      <input type="text" name="search" id="search-input" class="search-input" placeholder="Search here">
    </form>
  </div>
  
  <h3>Search Results for: <%= searchQuery %></h3>

  <table>
    <thead>   
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Delete</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <%users.forEach(user=>{ %>
          <tr>
            <td><%= user.id%></td>
            <td><%= user.name%></td>
            <td><%= user.email%></td>
            <td><a href="/admin/delete/<%= user.id%>">Delete</a></td>
            <td><a href="/admin/edit/<%= user.id%>">Edit</a></td>
          </tr>
      <% })%>
    </tbody>
  </table>
</body>
</html>
    